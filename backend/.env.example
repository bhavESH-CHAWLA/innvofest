MONGO_URI=mongodb://127.0.0.1:27017/innvofest
JWT_SECRET=replace_with_secure_secret
OPENAI_API_KEY=replace_with_openai_key
AI_MODEL=gpt-4o-mini
AI_PROVIDER_ORDER=openai,groq,huggingface

# Free/low-cost fallback providers (optional)
GROQ_API_KEY=replace_with_groq_key
GROQ_MODEL=llama-3.1-8b-instant
HUGGINGFACE_API_KEY=replace_with_hf_key
HF_MODEL=google/flan-t5-large

# CORS
FRONTEND_URL=http://localhost:5173

# Alert rule
ALERT_THRESHOLD=70

# SMTP for email alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASS=your_app_password
ALERT_FROM_EMAIL=you@example.com

# Optional: force all alerts to one inbox instead of logged-in user email
# ALERT_TO_EMAIL=admin@example.com
